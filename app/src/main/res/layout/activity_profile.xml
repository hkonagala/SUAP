<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#333937"
    tools:context="com.example.ll.suap.Profile">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#333937"
        android:minHeight="?attr/actionBarSize"
        android:layout_marginTop="10dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_below="@+id/toolbar"
        android:background="#95989A"
        android:layout_alignRight="@+id/button2"
        android:layout_alignEnd="@+id/button2"
        android:layout_alignLeft="@+id/profile_menubutton"
        android:layout_alignStart="@+id/profile_menubutton" />

    <ImageView
        android:id="@+id/profile_suapimage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/icon3"
        android:layout_centerHorizontal="true"
        android:layout_alignTop="@+id/toolbar"
        android:layout_above="@+id/view" />

    <Button
        android:id="@+id/profile_menubutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/sidebar"
        android:layout_above="@+id/view"
        android:layout_toLeftOf="@+id/profile_suapimage"
        android:layout_toStartOf="@+id/profile_suapimage"
        android:layout_alignTop="@+id/toolbar" />

    <ImageView
        android:id="@+id/profile_personimage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/personicon"
        android:layout_marginTop="67dp"
        android:layout_below="@+id/view"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/profile_personname_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/profile_personimage"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="38dp"
        android:text="Name Here"
        android:textColor="#ede698" />

    <TextView
        android:id="@+id/profile_personinfo_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/profile_personname_tv"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="34dp"
        android:text="Other Info Here"
        android:textColor="#ede698"/>
</RelativeLayout>
