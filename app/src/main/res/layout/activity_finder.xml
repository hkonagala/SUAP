<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:background="#333937"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <RelativeLayout
        android:id="@+id/activity_finder"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:background="#333937"
        tools:context="com.example.ll.suap.Finder">

        <TextView
            android:text="0 People Arriving on Campus"
            android:textColor="#ede698"
            android:textSize="17sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="100dp"
            android:id="@+id/finder_tv_count"
            android:layout_below="@+id/view"
            android:layout_centerHorizontal="true" />

        <Spinner
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:background="@drawable/roundedrectangle"
            android:id="@+id/finder_spinner_location"
            android:textAlignment="center"
            android:entries="@array/location_array"
            android:spinnerMode="dropdown"
            android:layout_centerVertical="true"
            android:layout_alignLeft="@+id/finder_tv_count"
            android:layout_alignStart="@+id/finder_tv_count"
            android:layout_alignRight="@+id/finder_tv_count"
            android:layout_alignEnd="@+id/finder_tv_count" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:inputType="text"
            android:text="additional info"
            android:textAlignment="center"
            android:textSize="16sp"
            android:ems="10"
            android:background="@drawable/roundedrectangle"
            android:layout_marginTop="48dp"
            android:id="@+id/finder_et_info"
            android:layout_below="@+id/finder_spinner_location"
            android:layout_alignLeft="@+id/finder_spinner_location"
            android:layout_alignStart="@+id/finder_spinner_location"
            android:layout_alignRight="@+id/finder_spinner_location"
            android:layout_alignEnd="@+id/finder_spinner_location" />

        <Button
            android:text="Post Pick up"
            android:background="@drawable/roundedgreenrectangle"
            android:textColor="#FFFFFF"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="52dp"
            android:id="@+id/finder_pickupbutton"
            android:layout_below="@+id/finder_et_info"
            android:layout_alignRight="@+id/imageView"
            android:layout_alignEnd="@+id/imageView"
            android:layout_alignLeft="@+id/imageView"
            android:layout_alignStart="@+id/imageView" />

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:background="#333937"
            android:minHeight="?attr/actionBarSize" />

        <View  android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#95989A"
            android:layout_below="@+id/toolbar"
            android:id="@+id/view" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            app:srcCompat="@drawable/icon3"
            android:layout_above="@+id/view" />

        <Button
            android:id="@+id/finder_menubutton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/sidebar"
            android:layout_alignBottom="@+id/toolbar"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/drawerView"
        android:layout_width="175dp"
        android:background="#333937"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_gravity="start">

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/personicon" />

        <Button
            android:id="@+id/finder_profilebutton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Profile"
            android:background="@drawable/roundedgreenrectangle"
            android:textColor="#FFFFFF"/>

        <Button
            android:id="@+id/finder_logoutbutton"
            android:text="Log Out"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/roundedgreenrectangle"
            android:textColor="#FFFFFF"/>

    </LinearLayout>
</android.support.v4.widget.DrawerLayout>