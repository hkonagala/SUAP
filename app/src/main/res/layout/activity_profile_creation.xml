<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_profile_creation"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#333937"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.ll.suap.ProfileCreation">


    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:ems="10"
        android:hint="Password"
        android:textColorHint="#FFFFFF"
        android:background="#333937"
        android:textColor="#FFFFFF"
        android:layout_marginTop="60dp"
        android:id="@+id/profilecreate_et_pwdl"
        android:layout_centerVertical="true" />

    <EditText
        android:id="@+id/profilecreate_et_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:background="#333937"
        android:textColor="#FFFFFF"
        android:hint="UMBC Email"
        android:textColorHint="#FFFFFF"
        android:inputType="text|textEmailAddress"
        android:layout_above="@+id/profilecreate_et_pwdl"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/profilecreate_buttonRegister"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:background="@drawable/roundedgreenrectangle"
        android:text="Register"
        android:textColor="#FFFFFF"
        android:layout_marginTop="58dp"
        android:layout_below="@+id/profilecreate_et_pwdl"
        android:layout_centerHorizontal="true" />


    <View  android:layout_width="match_parent"
    android:layout_height="2dp"
    android:background="#FFFFFF"
    android:layout_below="@+id/profilecreate_et_email"
    android:layout_alignLeft="@+id/profilecreate_et_email"
    android:layout_alignRight="@+id/profilecreate_et_email"
    android:id="@+id/profilecreate_emailview" />

    <View  android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#FFFFFF"
        android:layout_below="@+id/profilecreate_et_pwdl"
        android:layout_alignLeft="@+id/profilecreate_et_pwdl"
        android:layout_alignRight="@+id/profilecreate_et_pwdl"
        android:id="@+id/profilecreate_pwdview" />

    <ImageView
        android:id="@+id/imageView7"
        android:layout_width="200dp"
        android:layout_height="150dp"
        app:srcCompat="@drawable/icon2"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="11dp" />


</RelativeLayout>
