<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:background="#333937"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#333937"
        tools:context="com.example.ll.suap.FoundMatch">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#333937"
            android:minHeight="?attr/actionBarSize"
            android:layout_marginTop="18dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <View
            android:id="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_below="@+id/toolbar"
            android:layout_marginBottom="50dp"
            android:background="#95989A"
            android:layout_alignLeft="@+id/foundmatch_menubutton"
            android:layout_alignStart="@+id/foundmatch_menubutton" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:layout_marginEnd="20dp"
            app:srcCompat="@drawable/icon3"
            android:layout_centerHorizontal="true"
            android:layout_alignBottom="@+id/toolbar"
            android:layout_alignTop="@+id/toolbar" />

        <Button
            android:id="@+id/foundmatch_menubutton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/toolbar"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignTop="@+id/toolbar"
            android:layout_marginLeft="17dp"
            android:layout_marginStart="17dp"
            android:background="@drawable/sidebar" />

        <ImageView
            android:id="@+id/foundmatch_passengerimgage"
            android:layout_width="120dp"
            android:layout_height="120dp"
            app:srcCompat="@drawable/personicon"
            android:layout_marginTop="39dp"
            android:layout_below="@+id/toolbar"
            android:layout_alignLeft="@+id/view"
            android:layout_alignStart="@+id/view" />

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            app:srcCompat="@drawable/matchicon"
            android:layout_below="@+id/view"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="11dp" />

        <ImageView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:background="@drawable/personicon"
            android:id="@+id/foundmatch_driverbutton"
            android:layout_marginRight="18dp"
            android:layout_marginEnd="18dp"
            android:layout_above="@+id/foundmatch_passengername_tv"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/foundmatch_confirmbutton"
            android:background="@drawable/roundedgreenrectangle"
            android:text="CONFIRM PICK UP"
            android:textColor="#FFFFFF"
            android:layout_alignLeft="@+id/imageView"
            android:layout_alignRight="@+id/imageView"
            android:layout_below="@+id/foundmatch_passengername_tv"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="48dp" />

        <Button
            android:id="@+id/foundmatch_cancelbutton"
            android:text="CANCEL"
            android:textColor="#FFFFFF"
            android:background="@drawable/roundedgreenrectangle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="42dp"
            android:layout_below="@+id/foundmatch_confirmbutton"
            android:layout_alignRight="@+id/foundmatch_confirmbutton"
            android:layout_alignEnd="@+id/foundmatch_confirmbutton"
            android:layout_alignLeft="@+id/foundmatch_confirmbutton"
            android:layout_alignStart="@+id/foundmatch_confirmbutton" />

        <TextView
            android:id="@+id/foundmatch_passengername_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="PASSENGER NAME"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:layout_below="@+id/foundmatch_passengerimgage"
            android:layout_alignLeft="@+id/foundmatch_passengerimgage"
            android:layout_alignStart="@+id/foundmatch_passengerimgage" />

        <TextView
            android:id="@+id/foundmatch_drivername_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="DRIVER NAME"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:layout_alignBaseline="@+id/foundmatch_passengername_tv"
            android:layout_alignBottom="@+id/foundmatch_passengername_tv"
            android:layout_alignRight="@+id/foundmatch_driverbutton"
            android:layout_alignEnd="@+id/foundmatch_driverbutton"
            android:layout_alignLeft="@+id/foundmatch_driverbutton"
            android:layout_alignStart="@+id/foundmatch_driverbutton" />

    </RelativeLayout>
    <LinearLayout
        android:id="@+id/drawerView"
        android:layout_width="175dp"
        android:background="#333937"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_gravity="start">

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:srcCompat="@drawable/personicon" />

        <Space
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imageView3"
            android:layout_marginTop="23dp" />

        <Button
            android:id="@+id/foundmatch_profilebutton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Profile"
            android:background="@drawable/roundedgreenrectangle"
            android:textColor="#FFFFFF"/>

        <Space
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/foundmatch_profilebutton"
            android:layout_marginTop="23dp" />

        <Button
            android:id="@+id/foundmatch_logoutbutton"
            android:text="Log Out"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/roundedgreenrectangle"
            android:textColor="#FFFFFF"/>


    </LinearLayout>
</android.support.v4.widget.DrawerLayout>